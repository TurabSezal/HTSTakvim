
@{
    ViewBag.Title = "Olay Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head
    {

    <!-- Custom styles for this template -->
    <link href="/content/templates/Admintemplates/flatlab/admin/template_content/css/style.css" rel="stylesheet">
    <link href="/content/templates/Admintemplates/flatlab/admin/template_content/css/style-responsive.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/content/templates/Admintemplates/flatlab/admin/template_content/assets/bootstrap-datetimepicker/css/datetimepicker.css" />
}
<div class="row">
    <h2>Olay Ekle</h2>
    <div class="container">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Olay Ekle
                </header>
                <div class="panel-body" style="margin-top:20px">
                    <form role="form" action="/Admin/OlayEkle" method="post" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">İşlem Zamanı</label>
                            <div class="col-lg-10">
                                <input type="date" placeholder="" id="f-name" class="form-control" name="IslemZamani">
                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Olayın Başlangıç Zamanı</label>
                            <div class="col-lg-10">
                                <input type="time" placeholder="" id="l-name" class="form-control" name="Adi">
                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Olayın Tanımlanması</label>
                            <div class="col-lg-10">
                                <input type="time" class="spinner-input form-control" name="SatisFiyati">
                            </div>
                        </div>

                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Olayın Tipi :</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15" name="KategoriID">
                                    @foreach (var kategori in ViewBag.kategoriler)
                                    {
                                        <option value="@kategori.Id">
                                            @kategori.Adi
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Olayın Açıklaması</label>
                            <div class="col-lg-10">
                                <input type="text" class="spinner-input form-control" name="Aciklama">
                            </div>
                            <div class="form-group" style="padding-top:50px;padding-left:10px;">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-danger" type="submit">Kaydet</button>
                                </div>
                            </div>
                    </form>
                    <label class="checkbox" style="padding-left:40px;">
                        <input type="checkbox" name="SozlesmeKabul" value="true"> 30 Dakika Önce Bilgilendir.
                    </label>
                </div>

            </section>
        </div>
    </div>
</div>

