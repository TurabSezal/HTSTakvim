@{
    ViewBag.Title = "Olaylar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<HTSTakvim.Models.Urun>
<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table">
            <br />
            <div>
                <h2>Olaylar</h2>
                <form action="@Url.Action("Olaylar", "Admin")" method="get" class="form-inline">
                    <div class="form-group">
                        <label for="filterDate">Filtrele</label>
                        <div class="input-group">
                            <input type="date" id="filterDate" name="filterDate" class="form-control" />
                        </div>
                    </div>
                    <button class="btn btn-danger" style="margin-top:25px;" type="submit">Uygula</button>
                </form>
            </div>
            <div class="clearfix">
                <div class="btn-group" style="padding-top:10px;padding-bottom:15px;">
                    <a href="/Admin/OlayEkle" class="btn btn-success">
                        Yeni Olay <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>İşlem Zamanı</th>
                        <th>Olayın Başlangıç Zamanı</th>
                        <th>Olayın Tanımlanması</th>
                        <th>Olayın Tipi</th>
                        <th>Olayın Açıklaması</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var urun in Model)
                    {
                        <tr class="">
                            <td>@urun.IslemZamani</td>
                            <td>@urun.Adi</td>
                            <td class="center">@urun.SatisFiyati</td>
                            <td class="center">@urun.Kategori.Adi</td>
                            <td>@urun.Aciklama</td>

                            <td>
                                <a class="edit"
                                   href="/admin/OlayGuncelle/@urun.Id">
                                    <i class="icon-pencil"></i>
                                    Düzenle
                                </a>
                            </td>
                            <td>
                                <a class="delete"
                                   href="/admin/OlaySil/@urun.Id">
                                    <i class="icon-trash"></i>
                                    Sil
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


